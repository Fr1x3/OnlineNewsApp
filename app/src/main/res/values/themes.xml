<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineNewsApp" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="backgroundColor">@color/ghost_white</item>
        <!-- Primary brand color. -->
        <item name="colorSurface">@color/red_orange_light</item>
        <item name="colorPrimary">@color/red_orange</item>
        <item name="colorPrimaryDark">@color/red_orange_dark</item>
        <item name="colorPrimaryVariant">@color/red_orange_light</item>
        <item name="colorSecondary">@color/mint_green</item>
        <item name="colorSecondaryVariant">@color/mint_green_light</item>



        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/cardView</item>
        <item name="chipStyle">@style/chipOutline</item>
    </style>

    <style name="cutCornerStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>

    </style>

    <style name="cutCornerTopsStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="cutCornerBottomStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="cardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/cutCornerStyle</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="roundedTextView" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:padding">4dp</item>
        <item name="android:radius">70dp</item>
    </style>

    <style name="chipOutline" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/stoke_color_chip_state</item>
        <item name="chipBackgroundColor">@color/background_color_chip_state</item>
        <item name="android:textColor">@color/red_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/mint_green</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="chipIconVisible">false</item>
        <item name="android:enabled">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>